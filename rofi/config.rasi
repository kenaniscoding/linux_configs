
configuration {
  display-drun: "Apps:";
  display-window: "Windows:";
  display-filebrowser: "Files:";
  display-power-menu: "Power:";
  drun-display-format: "{icon} {name}";
  font: "CaskaydiaMono Nerd Font Large 15";
  // font: "Adwaita Sans 15";
  modi: "drun,power-menu:rofi-power-menu";
  show-icons: true;
  icon-theme: "Adwaita";
}
@theme "/dev/null"
* {
  bg:            #000000cc;    // Slightly more opaque version of your background
  bg-alt:        #111111cc;    // A slightly lighter alt background
  bg-selected:   #222222cc;    // Keeping the selected bg as is, more visible

  fg:            #ffffff;      // Your main foreground (light text)
  fg-alt:        #bbbbbb;      // Alternate, muted foreground

  border:        0;
  margin:        0;
  padding:       0;
  spacing:       0;
}

